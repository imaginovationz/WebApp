import React, { useState, useEffect } from 'react';
import { useParams } from 'react-router-dom';
import axios from 'axios';


function DetailsPage() {
	const { id } = useParams(); // Get the unique id from the URL
	const [text, setText] = useState(''); // Initialize state with the selected value
	const [message, setMessage] = useState(''); // State to show success/error messages
	const [oldValue, setOldValue] = useState(''); // Store the old value for comparison
	
	useEffect(() => {
	  // Fetch the current value for the given id
	  axios.get(`http://localhost:5000/api/details/${id}`)
	    .then((response) => {
	      setText(response.data.name);
	      setOldValue(response.data.name); // Store the old value
	    })
	    .catch(() => setMessage('Failed to fetch the value.'));
	}, [id]);


	
  const handleUpdate = () => {
    //axios.post('http://localhost:5000/api/update', { value: text })
	
	//[AN] comment from developer for update
	//here i am sending the old value and new value to the backend, so that I can update the correct value in the database
	//but in order to avoid the error if the column has duplicate values, i will match with ID (should be unique key in database, and with old value boths)
	              
	  axios.post('http://localhost:5000/api/update', { id, oldValue, newValue: text })
	    .then(() => setMessage('Value updated successfully!'))
	    .catch(() => setMessage('Failed to update the value.'));
	};

	 return (
	    <div style={{ padding: '2rem' }}>
	      <h2>Edit Selected Value</h2>
	      <input
	        type="text"
	        value={text}
	        onChange={(e) => setText(e.target.value)}
	        style={{ padding: '0.5rem', width: '300px' }}
	      />
	      <button
	        onClick={handleUpdate}
	        style={{ marginLeft: '1rem', padding: '0.5rem 1rem' }}
	      >
	        Update
	      </button>
	      {message && <p style={{ marginTop: '1rem', color: 'green' }}>{message}</p>}
	    </div>
	  );
	}

export default DetailsPage;


